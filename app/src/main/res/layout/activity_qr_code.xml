<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QR_codeActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saoyisao"
        android:text="扫一扫"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_qr"
        android:hint="请输入"
        app:layout_constraintTop_toBottomOf="@id/saoyisao"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok_qrcode"
        android:text="生成"
        app:layout_constraintTop_toBottomOf="@id/edit_text_qr"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/QR_images"
        android:src="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/ok_qrcode"
        />
</android.support.constraint.ConstraintLayout>